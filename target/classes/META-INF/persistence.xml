<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="IS1Projekat" transaction-type="RESOURCE_LOCAL">
		<class>klase.Ucenik</class>
		<class>klase.Profesor</class>
		<class>klase.Izostanak</class>
		<class>klase.UserInfo</class>
		<class>klase.Predmeti</class>
		<class>klase.Ocene</class>
		<class>klase.Razred</class>
		<class>klase.Napomena</class>
		<class>klase.RazredniStaresina</class>
		<class>klase.Roditelj</class>
		<class>klase.UcenikPK</class>
		<class>klase.Uloga</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost/is1_projekat_baza" />
			<property name="javax.persistence.jdbc.user" value="postgres"/>
			<property name="javax.persistence.jdbc.password" value="postgres"/>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
		</properties>
	</persistence-unit>
</persistence>
